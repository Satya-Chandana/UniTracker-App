<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingLeft="@dimen/margin"
    android:paddingRight="@dimen/margin"
    android:paddingTop="@dimen/margin"
    android:background="@drawable/round_ract003"
    android:backgroundTint="@color/app_color"
    android:paddingBottom="@dimen/margin"
    android:layout_height="@dimen/size6">
    <RelativeLayout
        android:id="@+id/hd"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_icon"
            android:layout_width="@dimen/size2"
            android:src="@drawable/nav_icon"
            android:layout_marginLeft="@dimen/sizesm1"
            android:onClick="NavNow"
            android:padding="@dimen/sizesm1"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/size2"
            app:tint="@color/white" />
        <ImageView
            android:id="@+id/noti_icon"
            android:layout_width="@dimen/size1"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:src="@drawable/noti_icon"
            android:layout_marginRight="@dimen/margin"
            android:onClick="NotiNow"
            android:layout_centerVertical="true"
            android:layout_height="@dimen/size2"
            app:tint="@color/white" />
        <RelativeLayout
            android:id="@+id/body11"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_marginLeft="@dimen/margin1"
            android:layout_toRightOf="@id/back_icon"
            android:layout_marginRight="@dimen/margin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/logo_main1"
                android:layout_width="wrap_content"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/margin"
                android:text="@string/app_name"
                android:textStyle="bold"
                android:singleLine="true"
                android:textColor="@color/white"
                android:fontFamily="@font/font2"
                android:textSize="@dimen/txt_size_lg"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>