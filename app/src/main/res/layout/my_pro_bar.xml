<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:background="@drawable/round_ract1"
    android:padding="@dimen/margin1"
    android:backgroundTint="@color/white"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/pb_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ProgressBar
            android:id="@+id/pb1"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:indeterminateTint="@color/app_color"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_toRightOf="@id/pb_rl"
        android:layout_centerVertical="true"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txt_msg"
            android:layout_width="wrap_content"
            android:text="@string/loading"
            android:textColor="@color/black"
            android:fontFamily="@font/font2"
            android:textSize="@dimen/txt_size_md1"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/txt_msg1"
            android:layout_width="wrap_content"
            android:text="10 %"
            android:visibility="gone"
            android:textColor="@color/app_color"
            android:fontFamily="@font/font2"
            android:layout_below="@id/txt_msg"
            android:textSize="@dimen/txt_size_lg"
            android:layout_marginTop="@dimen/margin"
            android:includeFontPadding="false"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>