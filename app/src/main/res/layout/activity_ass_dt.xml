<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/app_color">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin">

        <include layout="@layout/my_tool" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl1"
        android:layout_marginTop="@dimen/margin_md"
        android:background="@drawable/round_ract00"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:padding="@dimen/margin1">
        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="Create a work notest for science"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_lg" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginTop="@dimen/sizesm1"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="Date: 12-12-2023 to 15-12-2023"
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_md1" />

        <TextView
            android:id="@+id/txt20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginTop="@dimen/sizesm1"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="By: "
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_md1" />


        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt20"
            android:layout_marginTop="@dimen/sizesm"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="Class: 12 th"
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_md1" />
        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt20"
            android:layout_marginTop="@dimen/margin1"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="Class: 12 th"
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_md1" />



    </LinearLayout>

</RelativeLayout>