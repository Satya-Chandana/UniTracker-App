<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/round_ract00"
    android:backgroundTint="@color/white1"
    android:padding="@dimen/margin1"
    android:layout_marginBottom="@dimen/margin"
    >


    <RelativeLayout
        android:id="@+id/rgt_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/edit_icon"
            android:layout_width="@dimen/size2"
            android:layout_height="@dimen/size2"
            android:layout_centerVertical="true"
            android:padding="@dimen/sizesm1"

            android:src="@drawable/edit_icon"
            app:tint="@color/dgry" />
        <ImageView
            android:id="@+id/cross_icon"
            android:layout_width="@dimen/size3"
            android:layout_toRightOf="@id/edit_icon"
            android:layout_height="@dimen/size3"
            android:layout_marginLeft="@dimen/margin"
            android:layout_centerVertical="true"
            android:padding="@dimen/sizesm1"

            android:src="@drawable/cross_icon"
            app:tint="@color/dgry" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/rgt_rl"
        android:paddingLeft="@dimen/margin1">

        <TextView
            android:id="@+id/txt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="Ram Kumar"
            android:textColor="@color/black"
            android:textSize="@dimen/txt_size_lg" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt1"
            android:layout_marginTop="@dimen/sizesm1"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="sunita@gmail.com"
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_md1" />


        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt2"
            android:layout_marginTop="@dimen/sizesm"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="Class: 12 th"
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_md1" />

        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt3"
            android:layout_marginTop="@dimen/sizesm"
            android:fontFamily="@font/font1"
            android:includeFontPadding="false"
            android:text="Representative: Class 10th"
            android:textColor="@color/dgry"
            android:textSize="@dimen/txt_size_md1" />

    </RelativeLayout>
</RelativeLayout>